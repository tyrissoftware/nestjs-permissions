{
  "compileOnSave": true,
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "listFiles": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "strict": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es7",
      "es2016",
      "es2015",
      "es6",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.json"
  ],
  "exclude": [
    "./dist/",
    "./node_modules/",
    "./**/*.spec.ts"
  ]
}
